/* pages/content.wxss */

.slide-image{
  width: 100%;
  height: 600rpx;
}

.swiper{
  width: 100%;
height: 600rpx;
}

.priceAndLike{
  margin-top: 15rpx;
}

.price{
  font-size: 24px;
  margin-left: 10rpx;
  display: inline-block;
  width: 48%;
  color: red;
}

.like-num{
  display: inline-block;
  width: 48%;
  font-size: 12px;
  color: #bcbcbc;
  text-align: right;
}

.title{
  margin-top: 20rpx;
  font-size: 16px;
  margin-left: 10rpx;
  display: block;
  width: 100%;
}

.desc{
  font-size: 12px;
  margin-top: 25rpx;
  margin-left: 10rpx;
  display: block;
  width: 100%;
  /* color: #bcbcbc; */
}

.line{
  width: 97%;
  margin: 10rpx;
  border-top:1px solid #cdcdcd;
}


.seller{
  display: flex;
  white-space: nowrap;
}

.seller-img{
  margin-top: 20rpx;
  margin-left: 25rpx;
  height:70rpx;
  width: 70rpx;
  display: inline-block;
}

.sellerImg{
  height: 50rpx;
  width: 50rpx;
  border-radius: 50%;
}

.Name{
    margin-top: 20rpx;
  font-size: 14px;
  margin-left: 25rpx;
  line-height: 50rpx;
  height: 50rpx;
  width: 200rpx;
  display: inline-block;
}

.address{
  height: 80rpx;
  width: 100%;
  display: inline-block;
  text-align: right;
  padding-right: 15rpx;
}

.address-text{
  font-size: 14px;
  line-height: 80rpx;
  display: inline-block;
  margin-left: 10rpx;
}